  <ul>
    <% @todos.each do |todo| %>
      <li class="shadow d-flex justify-content-between align-items-center p-3 my-3">
        <%= todo.title %>
        <div class = 'd-flex'>
        <%= button_to todo_path(todo), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success mx-3', remote: true do %>
          Update
        <% end %>
        <%= button_to todo_path(todo), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', remote: true do %>
          Delete
        <% end %>
        </div>
      </li>
    <% end %>
  </ul>